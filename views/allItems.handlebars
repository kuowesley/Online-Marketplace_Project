<div id="all-items">
  {{#each items}}
    {{#if (eq (mod @index 2) 0)}}
      <div class="item-row">
    {{/if}}
    <div class="item">
      <p>Item: <a href="/items/{{this._id}}">{{this.item}}</a></p>
      <p>Price: ${{this.price}}</p>
      <p><img alt="Item Picture {{this.item}}" src="{{this.picture}}"></p>
      <p>Location: {{this.location}}</p>
      <p>Condition: {{this.condition}}</p>
    </div>
    {{#if (eq (mod @index 2) 1)}}
      </div>
    {{else if @last}}
      </div>
    {{/if}}
  {{/each}}
</div>



