<link rel="stylesheet" href="/public/css/determineMeetUpTimeStyles.css">
<h1>Determine Meet Up Time</h1>
{{#if items}}
<table>
    <thead>
        <th id="ItemName">ItemName</th>
        <th id="Price">Price</th>
        <th id="Picture">Picture</th>
        <th id="Location">Location</th>
        <th id="Condition">Condition</th>
        <th id="Quantity">Quantity</th>
        <th id="MeetUpTime">Meet Up Time</th>
        <th id="Submit">Submit</th>
    </thead>
    <tbody>
        {{#each items}}
        <tr>
            <td><a href="/items/{{this.item._id}}">{{this.item.item}}</a></td>
            <td>${{this.item.price}}</td>
            <td>

                <img alt="{{this.item.item}}" src="{{this.item.picture}}" width="50" height="50">

            </td>
            <td>{{this.item.location}}</td>
            <td>{{this.item.condition}}</td>
            <td>{{this.transactionInfo.quantity}}</td>
            <td>
                <div id="time_div">
                    {{!-- <label for="dateInput"></label> --}}
                    <input type="datetime-local" id="{{this.transactionInfo.transactionId}}">
                </div>
            </td>
            <td>
                <button class="submit" type="button" value="{{this.transactionInfo.transactionId}}"
                    data-quantity="{{this.transactionInfo.quantity}}">submit</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<div>
    <p>No item need for meet up!</p>
    <a href="/users/historicalPurchase"> Go see your orders</a>
</div>
{{/if}}

<script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
    crossorigin="anonymous"></script>
<script src="/public/js/determineMeetUpTime.js"></script>