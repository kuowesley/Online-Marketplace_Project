<link rel="stylesheet" href="/public/css/historicalPurchaseStyles.css">
<h1>Your orders</h1>
{{#if items}}
<table>
    <thead>
        <th id="ItemName">ItemName</th>
        <th id="Price">Price</th>
        <th id="Picture">Picture</th>
        <th id="Location">Location</th>
        <th id="Condition">Condition</th>
        <th id="Quantity">Quantity</th>
        <th id="RatingComment">Rating and Comment</th>
        <th id="MeetUpTime">Meet Up Time</th>
        <th id="Review">Review</th>
    </thead>
    <tbody>
        {{#each items}}
        <tr>
            <td><a href="/items/{{this.item._id}}">{{this.item.item}}</a></td>
            <td>${{this.item.price}}</td>
            <td>
                <img alt="{{this.item.item}}" src="{{this.item.picture}}" width="50" height="50">
            </td>
            <td>{{this.item.location}}</td>
            <td>{{this.item.condition}}</td>
            <td>quantity:{{this.quantity}}</td>
            <td>
                <button class="rate" type="button" id="{{this.item._id}} rate" value="{{this.item._id}}"
                    data-itemname="{{this.item.item}}">Rate/Comment</button>
            </td>
            {{!-- {{#if this.meetUp}} --}}
            <td> {{#if this.meetUp}}{{this.meetUp}} {{/if}}</td>
            {{!-- {{/if}} --}}
            <td>
                <button class="edit" type="button" id="{{this.item._id}} edit" value="{{this.item._id}}"
                    data-itemname="{{this.item.item}}">Edit Review</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<div id="rateCommentModal" hidden>
    <h2 id="h2_rate">Rate and Comment</h2>
    <label for="ratingSelect">Rating:</label>
    <select id="ratingSelect">
        <option value="5 stars">5 stars</option>
        <option value="4 stars">4 stars</option>
        <option value="3 stars">3 stars</option>
        <option value="2 stars">2 stars</option>
        <option value="1 stars">1 stars</option>
    </select>
    <br>
    <textarea id="commentTextArea" placeholder="Enter your comment"></textarea>
    <button id="submitComment">Submit</button>
    <button id="closeModal">Close</button>
</div>
<div id="rateCommentModal-edit" hidden>
    <h2 id="h2_edit">Change your Rate and Comment</h2>
    <label for="ratingSelect-edit">Rating:</label>
    <select id="ratingSelect-edit">
        <option value="5 stars">5 stars</option>
        <option value="4 stars">4 stars</option>
        <option value="3 stars">3 stars</option>
        <option value="2 stars">2 stars</option>
        <option value="1 stars">1 stars</option>
    </select>
    <br>
    <textarea id="commentTextArea-edit" placeholder="Enter your comment"></textarea>
    <button id="submitComment-edit">Submit</button>
    <button id="closeModal-edit">Close</button>
</div>
{{else}}
<div>
    <p>No items have been sold yet!</p>
</div>
{{/if}}

<script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
    crossorigin="anonymous"></script>
<script src="/public/js/historicalPurchase.js"></script>