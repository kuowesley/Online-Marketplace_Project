<link rel="stylesheet" href="/public/css/itemByIdStyles.css">
<a href="/items">Back to all items</a>

<p>View comments about the seller, <a href="../users/getSellerInformation/{{item.seller_id}}">click here</a>.</p>

<div class="item-details">
    <h1 class="itemName">{{item.item}}</h1>
    <p id="itemId" hidden>{{item._id}}</p>
    <p class="itemDescription">{{item.description}}</p>
    <p class="itemPrice">Price: ${{item.price}}</p>
    <p class="itemPicture">
        {{#each item.picture}}
        <img alt="Item Picture {{item.item}}" src="{{this}}" style="width:600px;height:450px;">
        {{/each}}
    </p>
    <p class="itemQuantity">Quantity: {{item.quantity}}</p>
    <p id="location" class="itemLocation">Location: {{item.location}}</p>
    <p class="itemDeliveryMethod">Delivery Method: {{item.deliveryMethod}}</p>
    <p class="itemRating">{{rating}} Stars ({{allrates}} ratings)</p>
    <p class="itemCondition">Condition: {{item.condition}}</p>
    {{#if item.quantity}}
    <select id="quantitySelect" name="quantitySelect" class="itemQuantitySelect">
        {{#each (range (min item.quantity 30))}}
        <option value="{{this}}">{{this}}</option>
        {{/each}}
    </select>
    <button id="addToCart" type="submit">Add to cart</button>
    <button id="buyItNow" type="submit">Buy it now</button>
    {{else}}
    <p>item currently unavailable</p>
    {{/if}}
    <div id="map" class="map"></div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
    crossorigin="anonymous"></script>
<script src="/public/js/itemById.js"></script>