<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Upload Item Page</title>
    <link rel="stylesheet" href="/public/css/styles.css">
</head>

<body>
    <form id="fileUploadForm" action="/items/upload" method="post">
        <div>
            <label for="itemName">Item Name:</label>
            <input type="text" id="itemName" name="itemName" value="{{itemName}}" required>
        </div>

        <div>
            <label for="description">Description:</label>
            <input type="text" id="description" name="description" value="{{description}}" required>
        </div>

        <div>
            <label for="price">Price:</label>
            <input type="number" id="price" name="price" value="{{price}}" required>
        </div>

        <div>
            <label for="quantity">Quantity:</label>
            <input type="number" id="quantity" name="quantity" value="{{price}}" required>
        </div>

        <div>
            <label for="transaction_date">Transaction Date:</label>
            <input type="text" id="transaction_date" name="transaction_date" required>
        </div>

        <div>
            <label for="location">Location:</label>
            <input type="text" id="location" name="location" required>
        </div>

        <div>
            <label for="deliveryMethod">DeliveryMethod:</label>
            <input type="text" id="deliveryMethod" name="deliveryMethod" required>
        </div>

        <div>
            <label for="condition">Condition:</label>
            <input type="text" id="condition" name="condition" required>
        </div>

        <input type="file" id="fileInput" name="fileInput" accept="image/*" style="display:none" multiple>
        <a href="#" id="fileSelect" name="fileSelect" multiple>Select some files</a>
        <button type="submit">Upload</button>
    </form>
    <div id="fileList" name="fileList">
        <p>No files selected!</p>
    </div>
</body>

<script src="/public/js/client_side_validation.js"></script>

</html>